<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_root"
    android:layout_width="@dimen/_573px"
    android:layout_height="@dimen/_200px">

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="@dimen/_90px"
        android:layout_height="@dimen/_90px"
        android:layout_marginTop="@dimen/_10px"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/content_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/content_iv"
        android:layout_marginLeft="@dimen/_30px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffFFFFFF"
            android:textSize="@dimen/_38px"/>

        <TextView
            android:id="@+id/content_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15px"
            android:textColor="#99FFFFFF"
            android:lineSpacingExtra="@dimen/_10px"
            android:textSize="@dimen/_28px"/>
    </LinearLayout>
</RelativeLayout>