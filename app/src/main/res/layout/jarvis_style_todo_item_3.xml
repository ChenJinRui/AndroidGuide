<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_root"
    android:layout_width="@dimen/_353px"
    android:layout_height="@dimen/_265px"
    android:padding="@dimen/_5px"
    >

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/content_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:padding="@dimen/_12px"
        android:textSize="@dimen/_28px"
        android:visibility="gone" />

    <include
        layout="@layout/jarvis_style_todo_item_tip1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>