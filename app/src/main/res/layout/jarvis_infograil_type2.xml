<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_sv"
    android:layout_width="@dimen/_335px"
    android:layout_height="@dimen/_250px"
    android:layout_marginTop="@dimen/_30px"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/img_content"
        android:layout_width="@dimen/_335px"
        android:layout_height="@dimen/_250px" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tv_color_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_15px"
        android:paddingRight="@dimen/_15px"
        android:textColor="#ffffff"
        android:textSize="@dimen/_28px" />

    <ImageView
        android:id="@+id/img_focus"
        android:layout_width="@dimen/_345px"
        android:layout_height="@dimen/_260px"
        android:background="@drawable/ic_select_bg"
        android:visibility="invisible" />
</RelativeLayout>