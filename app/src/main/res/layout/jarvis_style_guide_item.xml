<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_30px">

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="@dimen/_90px"
        android:layout_height="@dimen/_90px"
        android:layout_marginTop="@dimen/_5px"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/content_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/content_iv"
        android:layout_marginLeft="@dimen/_30px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0D3063"
            android:textSize="@dimen/_32px"/>

        <TextView
            android:id="@+id/content_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20px"
            android:textColor="#990D3063"
            android:textSize="@dimen/_24px"/>
    </LinearLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px"
        android:layout_below="@id/content_tip"
        android:background="#22000000"/>
-->
</RelativeLayout>